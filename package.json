{
  "name": "root",
  "private": true,
  "devDependencies": {
    "cz-conventional-changelog": "^3.0.2",
    "husky": "^3.0.3",
    "lerna": "^3.6.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook"
    }
  }
}
